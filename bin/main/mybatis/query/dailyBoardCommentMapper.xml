<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dailyBoardCommentInfo">
	<insert id="insertComment" parameterType="com.spring.coffee.dailyboard.vo.DailyBoardCommentVO">
		<![CDATA[
			INSERT INTO DAILYBOARD_COMMENT(no, content, nickname, boardNo, parentNo)
			VALUES(dbc_no.nextval, #{content}, #{nickname}, #{boardNo},
		]]>
		<if test="parentNo != 0">
			#{parentNo}
		</if>
		<if test="parentNo == 0">
			0
		</if>
		<![CDATA[
				)
		]]>
	</insert>

</mapper>