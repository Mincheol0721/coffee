<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dailyBoardInfo">

	<select id="searchDailyBoardList" parameterType="java.util.Map" resultType="dailyBoardInfo">

	</select>

    <update id="insert" parameterType="java.util.Map">
        <![CDATA[
        	UPDATE dailyBoard SET fileName=StringArray(
        ]]>
        <foreach collection="fileNames" item="fileName" separator=", " close=")">
        	#{fileName}
        </foreach>
        <![CDATA[
	        WHERE no=#{no}
        ]]>
    </update>

	<select id="getSearchDailyBoardCount" resultType="int" parameterType="java.util.Map">
		<![CDATA[
			SELECT COUNT(*) FROM dailyBoard WHERE ${keyField} LIKE '%' || #{keyword} || '%'
		]]>
	</select>

</mapper>